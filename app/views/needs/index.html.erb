<div class="row">
  <div class="kris">

  </div>

</div>

<div class="container">
  <div class="row">
    <center>
      <div class="centered">
        <div class="col-md-12">
          <div class="row carousel-holder">
            <div class="col-md-12">
              <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="item active">
                    <%= image_tag "girl_and_goat.jpg", width: "900px", padding: "10px" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <% @needs.each_slice(3).to_a.each do |need| %>
              <% need.each do |need| %>
              <div class="col-sm-4 special" id="<%= need.name %>, "style="height: 420px">
                <div class="thumbnail", style="height: 420px">
                    <%= image_tag("#{need.image_url}", class: "img-rounded now") %>
                    <h4><%= need.name.upcase %></h4>
                    <h4><%= number_to_currency(need.cost) %></h4>
                  <div class="caption">
                    <%= button_to cart_path(need_id: need.id), class: "btn btn-primary" do %>
                      Add to Basket
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </center>
  </div>
</div>
