<div class="cart">
  <div class="container">
    <div class="cart-top">
      <%= link_to "<< home", root_path %>
    </div>
    <div class="col-md-9 cart-needs">
      <h2>My Basket (<%= @cart.count_donations %>)</h2>
      <% @recipients_donations.each do |recipient, donations| %>
        <div class="cart-header">
          <div class="cart-sec">
            <div class="cart-need-info">
              <% donations.each do |donation| %>
                <p><%= "Donate #{donation.amount} to #{recipient.full_name} for #{donation.need_slug}" %></p>
              <% end %>
              <!-- <div class="cart-remove"><%# link_to "Remove", cart_path(id: need.id), method: :delete, data: { confirm: "Are you sure?" } %></div> -->
             <!-- <h4>Price: <%# number_to_currency(need.cost) %></h4>
              <%# form_for :session, url: cart_path(:id, {need_id: need.id}), html: {method: "patch"} do |f| %>
                <%# f.number_field :quantity, value: need.quantity, min: 1, max: need.max, class: "form-control input-small" %>
                <%# f.submit "Update Quantity", class:"cart-update" %>
              <%#end %> -->
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 cart-total">
      <span class="total final"><h4 class="last-price">TOTAL
          <%# number_to_currency(@cart.total_cost) %></h4></span>
      <div class="clearfix"></div>
      <% if current_user %>
        <% if @cart.contents.empty? %>
          <button  type="button" disabled>Approve Needs</button>
        <% else %>
          <%= button_to "Approve Needs", needs_path, class: "order" %>
        <% end %>
      <% else %>
        <%= button_to "Login to Approve Needs", login_path, method: :get, class:"order" %>
      <% end %>
    </div>
  </div>
</div>

