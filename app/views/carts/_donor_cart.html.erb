<div class="container">
  <div class="cart-top">
    <h4><%= link_to "<< home", root_path %></h4>
  </div>
  <div class="">
  <h2>My Basket</h2>
  <h4>Contents: <%= @cart.count_donations %> Items</h4>
  <table class="table table-striped sized-table">
    <tr>
      <th>Amount</th>
      <th>Person in Need</th>
      <th>Need Fulfilled</th>
      <th>Update</th>
      <th>Remove</th>
    </tr>
    <% @recipients_donations.each do |recipient, donations| %>
    <div class="cart-header">
      <div class="cart-sec">
        <div class="cart-need-info">
          <% donations.each do |donation| %>
          <tr id="<%= donation.need_slug %>">
            <td><h4><%= "Donate #{number_to_currency(donation.amount)}" %></h4></td>
            <td><h4><%= recipient.full_name %></h4></td>
            <td><h4><%= donation.need_name %></h4></td>
            <td>
              <div class="col-xs-4">
              <%= form_for donation, url: donations_path(donation.id), method: :patch do |f| %>
                <%= f.number_field :amount, size: 2, value: donation.amount, min: 1, max: donation.need.max_donate_amount, class: "form-control input-small" %>
              </div>
              <%= f.submit "Update Amount", class:"btn btn-default cart-update" %>
              <% end %>
            </td>
            <td>
              <div class="cart-remove"><%= link_to "Remove Donation", donations_path(id: donation.id),  class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" } %></div>
              <% end %>
              <% end %>
            </td>
          </tr>
        </div>
    </table>
  </div>
</div>
<center>
  <a name="about"></a>
  <div class="intro-header">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="splash">
            <div class="">
              <h3 class="last-price">TOTAL <%= number_to_currency(@cart.total_donor_cost) %></h3>
              <hr class="intro-divider">
                <ul class="fluff list-inline intro-social-buttons">
                  <li>
                    <div class="clearfix"></div>
                    <% if @cart.contents["donor"].empty? %>
                      <button  type="button" disabled>Checkout</button>
                    <% else %>
                      <%= button_to "Checkout", new_charge_path, method: :get, class:"order btn btn-primary big" %>
                    <% end %>
                  </li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</center>
