<div class="cart">
  <div class="container">
    <div class="cart-top">
      <h1>All Users</h1>
    </div>
    <div class="cart-conclusion">

      <table>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>City</th>
          <th>Country</th>
          <th>Username</th>
          <th>Description</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
        <% @users.each do |user| %>
          <tr class="user<%= user.id %>">
            <td><%= link_to user.full_name, admin_recipient_path(user.username) %></td>
            <td><%= user.email %></td>
            <td><%= user.city %></td>
            <td><%= user.country %></td>
            <td><%= user.username %></td>
            <td><%= user.description %></td>
            <td><%= button_to "Edit", edit_admin_user_path(user), method: :get, class: "btn-default" %></td>
            <td><%= button_to "Delete", admin_user_delete_path(user), method: :delete,  class: "btn-default",confirm: "Are you sure?" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
