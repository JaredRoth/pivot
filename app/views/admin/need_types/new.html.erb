<div class="container form-spacing">
  <div class="vertical-center-row">
    <div align="center">
      <div class="recip-head">
        <h1>Need Creation Page</h1>
      </div>
      <h3>Enter New Need Information:</h3>
      <div class="login-squish">
        <%= form_for @need_type, url: {:controller=>'admin/need_types', :action=>'create'} do |f| %>
        <div class="form-group">
          <p><%= f.text_field :name, placeholder: "Name", class:"form-control" %></p>
        </div>
        <div class="form-group">
          <p><%= f.text_field :description, placeholder: "Description", class:"form-control" %></p>
        </div>
        <div class="form-group">
          <p><%= f.number_field :cost, step: "any", placeholder: "Cost", class:"form-control" %></p>
        </div>
        <div class="form-group">
          <p><%= f.number_field :category, placeholder: "Category", class:"form-control" %></p>
        </div>
        <div class="form-group">
          <p><%= f.text_field :image_url, placeholder: "Image Url", class:"form-control" %></p>
        </div>
        <div class="form-group">
          <p><%= f.submit "Create Need Type", class: "btn btn-default" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
