
<div class="container">
  <div class="recip-head">
    <h1>All Users</h1>
  </div>
    <table class="table-striped admin-user-table">
      <tr>
        <th>Role</th>
        <th>Image</th>
        <th>Name</th>
        <th>Email</th>
        <th>Country</th>
        <th>Username</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
      <% @admins.each do |user| %>
      <tr class="user<%= user.id %>">
        <td><%= user.role.upcase %></td>
        <td><div class="teeny">
          <%= image_tag user.image_url, class: "tiny-pic" %></div></td>
          <td> <h4><%= link_to user.full_name, admin_profile_show_path(user) %></h4></td>
          <td><%= user.email %></td>
          <td><%= user.country %></td>
          <td><%= user.username %></td>
          <td><%= button_to "Edit", edit_admin_user_path(user), method: :get, class: "btn btn-default" %></td>
          <td><%= button_to "Delete", admin_user_delete_path(user), method: :delete,  class: "btn btn-default", confirm: "Are you sure?" %></td>
        </tr>
        <% end %>
      <% @recipients.each do |user| %>
      <tr class="user<%= user.id %>">
        <td><%= user.role.upcase %></td>
        <td><div class="teeny">
          <%= image_tag user.image_url, class: "tiny-pic" %></div></td>
          <td> <h4><%= link_to user.full_name, admin_profile_show_path(user) %></h4></td>
          <td><%= user.email %></td>
          <td><%= user.country %></td>
          <td><%= user.username %></td>
          <td><%= button_to "Edit", edit_admin_user_path(user), method: :get, class: "btn btn-default" %></td>
          <td><%= button_to "Delete", admin_user_delete_path(user), method: :delete,  class: "btn btn-default", confirm: "Are you sure?" %></td>
        </tr>
        <% end %>
      <% @donors.each do |user| %>
      <tr class="user<%= user.id %>">
        <td><%= user.role.upcase %></td>
        <td><div class="teeny">
          <%= image_tag user.image_url, class: "tiny-pic" %></div></td>
          <td> <h4><%= link_to user.full_name, admin_profile_show_path(user) %></h4></td>
          <td><%= user.email %></td>
          <td><%= user.country %></td>
          <td><%= user.username %></td>
          <td><%= button_to "Edit", edit_admin_user_path(user), method: :get, class: "btn btn-default" %></td>
          <td><%= button_to "Delete", admin_user_delete_path(user), method: :delete,  class: "btn btn-default", confirm: "Are you sure?" %></td>
        </tr>
        <% end %>
    </table>
</div>
