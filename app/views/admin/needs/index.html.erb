<div class="cart">
  <div class="container">
    <div class="cart-top">
      <h1>All Items</h1>
    </div>
    <div class="cart-conclusion">

      <table>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Action</th>
        </tr>
        <% @needs.each do |need| %>
        <div>
          <tr>
            <td><%= link_to need.name, admin_need_path(need) %></td>
            <td><%= number_to_currency(need.cost) %></td>
            <td><%= link_to "Add Need To Recipient", new_admin_need_path(need), class: "btn btn-primary" %></td>
          </tr>
        </div>
        <% end %>
        <tr>
        </tr>
      </table>
    </div>
  </div>
</div>
